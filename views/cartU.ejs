<div class="container">	
	<h2>cart 테이블 수정</h2>
	<form action="/cartupdate_process" method="post">
		<input type="hidden" name="cart_id" value="<%=cartview[0].cart_id%>">
		<div class="mb-3">
			<label class="form-label" for="id_customer">고객</label> 
			<select name="loginid" id="id_customer">
				<% for(i = 0; i < customers.length; i++) { 
					  var selected = '';
					  if(cartview[0].loginid === customers[i].loginid) { selected = 'selected'; } %>
					  <option value="<%=customers[i].loginid%>" <%=selected%>><%=customers[i].name%></option>
				<% } %>
			</select>
		</div>
		<div class="mb-3">
			<label class="form-label" for="id_product">상품</label> 
			<select name="mer_id" id="id_product">
				<% for(i = 0; i < products.length; i++) { 
					  var selected = '';
					  if(cartview[0].mer_id === products[i].mer_id) { selected = 'selected'; } %>
					  <option value="<%=products[i].mer_id%>" <%=selected%>><%=products[i].name%></option>
				<% } %>
			</select>
		</div>
		<div class="mb-3">
			<label class="form-label" for="id">날짜</label> 
			<input class="form-control" type="text" name="date" value="<%=cartview[0].date%>" style="width:300px;" disabled />
		</div>
		<button class="btn btn-outline-primary btn-sm" type="submit">수정</button>
		<a href="/cartview"><button class="btn btn-outline-primary btn-sm" type="button">카트 목록 돌아가기</button></a> 
	</form>
</div>